{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "description": "A simple bar chart with embedded data.",
  "title": {
    "text": "World University Ranking Score",
    "fontSize": 20,
    "color": "#3e4149"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/shengquanluo/FIT3179/main/world.json",
    "format": {
      "type": "topojson",
      "feature": "world"
    }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/shengquanluo/FIT3179/main/data.csv"
        },
        "key": "country",
        "fields": ["score"]
      },
      "default": 0
    },
    {
      "calculate": "datum.score*1",
      "as": "score_mean"
    }
  ],
  "width": 1000,
  "height": 500,
  "projection": {
    "type": "equirectangular"
  },
  "mark": {
    "type": "geoshape",
    "stroke": "gray"
  },
  "encoding": {
    "color": {
      "field": "score_mean",
      "type": "quantitative",
      "scale": {
        "type": "linear",
        "domain": [5, 55],
        "scheme": "blues"
      }
    },
    "tooltip": [
      {
        "field": "properties.name",
        "type": "nominal",
        "title": "Country"
      },
      {
        "field": "score_mean",
        "type": "quantitative",
        "title": "Score",
        "format": ".2f"
      }
    ]
  }
}